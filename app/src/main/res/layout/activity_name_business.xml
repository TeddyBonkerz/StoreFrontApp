<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    tools:context=".nameBusiness">

    <ImageView
        android:id="@+id/white_bkg"
        android:layout_width="413dp"
        android:layout_height="486dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/round_background" />

    <TextView
        android:id="@+id/BusinessNameHeader"
        android:layout_width="238dp"
        android:layout_height="67dp"
        android:gravity="center"
        android:text="ENTER YOUR BUSINESS NAME"
        android:textColor="#000000"
        android:textSize="27sp"
        app:fontFamily="@font/comfortaa_bold"
        app:layout_constraintBottom_toTopOf="@+id/businessPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/white_bkg"
        app:layout_constraintVertical_bias="0.597" />

    <ImageView
        android:id="@+id/businessPic"
        android:layout_width="351dp"
        android:layout_height="283dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/white_bkg"
        app:srcCompat="@drawable/namebusinesspic" />

    <EditText
        android:id="@+id/businessName"
        android:layout_width="305dp"
        android:layout_height="111dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textshadow"
        android:hint="Enter Business Name"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessPic"
        app:layout_constraintVertical_bias="0.053" />

    <ImageButton
        android:id="@+id/forwardBtnToAdmin"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:background="#0000"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/businessName"
        app:layout_constraintEnd_toEndOf="@+id/businessName"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="@+id/businessName"
        app:layout_constraintTop_toTopOf="@+id/businessName"
        app:layout_constraintVertical_bias="0.462"
        app:srcCompat="@drawable/forwardbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>