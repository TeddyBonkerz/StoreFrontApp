<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash_screen"
    android:background="@color/background_blue">
    <!--Add proper image below-->

    <TextView
        android:id="@+id/store_motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="212dp"
        android:text="Put Your Business Out There"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        app:fontFamily="@font/comfortaa_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store" />

    <ImageView
        android:id="@+id/randoicon"
        android:layout_width="348dp"
        android:layout_height="217dp"
        android:layout_marginTop="235dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/splash_logo"
        app:layout_constraintBottom_toTopOf="@+id/store"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/store"
        android:layout_width="74dp"
        android:layout_height="22dp"
        android:layout_marginBottom="113dp"
        android:fontFamily="@font/permanent_marker"
        android:text=""
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/store_motto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randoicon" />

</androidx.constraintlayout.widget.ConstraintLayout>