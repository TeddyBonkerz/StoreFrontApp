<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ListView
        android:id="@+id/aLV"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@+id/analytics"
        android:layout_centerInParent="true" />
    <ListView
        android:id="@+id/tLV"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@+id/trending"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/analytics"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeHeader3"
        android:src="@drawable/analytics" />

    <ImageView
        android:id="@+id/trending"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@+id/aLV"
        android:src="@drawable/trending" />

    <TextView
        android:id="@+id/homeHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="50dp"
        android:text="Bus Name"
        android:textColor="#0B0B0B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/homeHeader2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="50dp"
        android:text="Admin Name"
        android:textColor="#0B0B0B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/homeHeader3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="323dp"
        android:layout_marginLeft="323dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="6dp"
        android:text="Category"
        android:textColor="#0B0B0B"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp" />

</RelativeLayout>