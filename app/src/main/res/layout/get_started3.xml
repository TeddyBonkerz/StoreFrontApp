<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue">

    <ImageView
        android:id="@+id/white_bkg"
        android:layout_width="413dp"
        android:layout_height="486dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/round_background" />

    <TextView
        android:id="@+id/categoryHeader"
        android:layout_width="238dp"
        android:layout_height="67dp"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:text="SELECT YOUR SHOP'S CATEGORY"
        android:textColor="#000000"
        android:textSize="23sp"
        app:fontFamily="@font/comfortaa_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/white_bkg" />

    <ImageView
        android:id="@+id/categoryPic"
        android:layout_width="351dp"
        android:layout_height="283dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryHeader"
        app:srcCompat="@drawable/shopcategorypic" />

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="294dp"
        android:layout_height="85dp"
        android:background="@drawable/textshadow"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryPic"
        app:layout_constraintVertical_bias="0.094" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="19dp"
        android:layout_height="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_category"
        app:layout_constraintEnd_toStartOf="@+id/getStartedBtn3"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="@+id/spinner_category"
        app:layout_constraintTop_toTopOf="@+id/spinner_category"
        app:layout_constraintVertical_bias="0.531"
        app:srcCompat="@drawable/dropdowntriangle" />

    <ImageButton
        android:id="@+id/getStartedBtn3"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#0000"
        android:onClick="switchLayout"
        android:scaleType="fitXY"
        android:text="next"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_category"
        app:layout_constraintEnd_toEndOf="@+id/spinner_category"
        app:layout_constraintTop_toTopOf="@+id/spinner_category"
        app:layout_constraintVertical_bias="0.487"
        app:srcCompat="@drawable/forwardbtn" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="73dp"
        android:layout_height="38dp"
        android:background="#D8D7D8"
        android:onClick="goBack"
        android:text="back"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:fontFamily="@font/comfortaa_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

</androidx.constraintlayout.widget.ConstraintLayout>