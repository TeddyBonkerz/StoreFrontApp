<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue">

    <ImageView
        android:id="@+id/white_bkg"
        android:layout_width="413dp"
        android:layout_height="486dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/round_background" />
    <Button
        android:id="@+id/backBtn1"
        android:onClick="goBack"
        android:layout_width="73dp"
        android:layout_height="38dp"
        android:background="#D8D7D8"
        android:text="back"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:fontFamily="@font/comfortaa_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />
    <TextView
        android:id="@+id/addressHeader"
        android:layout_width="238dp"
        android:layout_height="67dp"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:text="WHERE ARE YOU?"
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/comfortaa_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/addressPic"
        android:layout_width="351dp"
        android:layout_height="283dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressHeader"
        app:srcCompat="@drawable/mailingaddresspic" />

    <EditText
        android:id="@+id/mailingAddressField"
        android:layout_width="305dp"
        android:layout_height="111dp"
        android:background="@drawable/textshadow"
        android:ems="10"
        android:hint="Mailing Address"
        android:inputType="textPersonName"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressPic"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/getStartedBtn4"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:background="#0000"
        android:onClick="switchLayout"
        android:scaleType="fitXY"
        android:text="next"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/mailingAddressField"
        app:layout_constraintEnd_toEndOf="@+id/mailingAddressField"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="@+id/mailingAddressField"
        app:layout_constraintTop_toTopOf="@+id/mailingAddressField"
        app:layout_constraintVertical_bias="0.552"
        app:srcCompat="@drawable/forwardbtn" />


</androidx.constraintlayout.widget.ConstraintLayout>